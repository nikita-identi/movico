{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "jsx": "react-jsx",
        "outDir": "dist",
        "rootDir": ".",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "types": [
            "node"
        ],
        "baseUrl": ".",
        "paths": {
            "@core/*": [
                "core/*"
            ],
            "@views/*": [
                "_views/*"
            ],
            "@controllers/*": [
                "_controllers/*"
            ],
            "@services/*": [
                "_services/*"
            ]
        }
    },
    "include": [
        ".",
        "core/scripts/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}